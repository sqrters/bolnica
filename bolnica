void Posjetitelj(){
  cout<<"Trenutno vrijeme je: ";
  time_t t = time(0);
   struct tm * now = localtime( & t );
    
    cout<<now->tm_hour;
    cout<<":";
    cout<<now->tm_min;
    cout<<":";
    cout<<now->tm_sec;
    cout<<endl;
    /*cout<<"Datum: ";
    cout<<now->tm_wday;*/
    if(now->tm_hour>=12 and now->tm_hour<=17){
    	cout<<"Dosli ste u vrijeme posjeta";
	}else{cout<<"Trenutno nije moguce posjetiti pacijente. Posjete su od 13-17h.";
	Izbornik1();
	}
}
